<div class="form-new">
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control w-25 p-3' %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control w-25 p-3' %>
    </div>

    <%= f.submit class: 'btn btn-primary w-25 p-3' %>
  <% end %>
</div>
